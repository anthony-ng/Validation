source 'https://rubygems.org'

ruby '2.0.0'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'

# Use Thin for our web server
gem 'thin'

gem 'sinatra-activerecord'

gem 'activesupport', '~>4.1'
gem 'activerecord', '~>4.1'


gem 'rake'
gem 'bcrypt-ruby'

gem 'rack-flash3'

group :development, :test do
  gem 'rspec-html-matchers'
  gem 'shoulda-matchers'
  gem 'rack-test'
  gem 'faker'
  gem 'rspec'
end
